<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp">

    <RelativeLayout
        android:id="@+id/contact_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#77C1FD"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/contact_no"
            android:layout_below="@id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9063034608"
            android:textSize="15dp"
            android:layout_marginTop="2dp"></TextView>

        <LinearLayout
            android:layout_below="@id/contact_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/selected_for"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selected for: "
                android:textSize="17dp"
                android:textColor="#77C1FD"></TextView>

            <TextView
                android:id="@+id/selected_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both Call &amp; Message"
                android:textSize="17dp"></TextView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>